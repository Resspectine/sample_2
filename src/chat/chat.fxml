<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<fx:root prefHeight="321.0" prefWidth="248.0" type="AnchorPane" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <TextArea id="chatBox" fx:id="chat" editable="false" prefHeight="316.0" prefWidth="287.0" promptText="Здесь будут выводиться сообщения" wrapText="true"/>
        <TextField id="chatLine" fx:id="chatField" layoutY="316.0" onKeyPressed="#handleEnterPressed" prefHeight="25.0" prefWidth="207.0" promptText="Введите сообщение"/>
        <Button id="sendButton" fx:id="sendText" layoutX="207.0" layoutY="316.0" mnemonicParsing="false" onAction="#sendMessage" onKeyPressed="#handleEnterPressed" prefHeight="25.0" prefWidth="80.0" text="Отправить"/>
    </children>
</fx:root>
